{
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "../src",
    "distDir": "../src"
  },
  "package": {
    "productName": "SCypher",
    "version": "3.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "exists": true,
        "scope": ["$APPDATA/*", "$DESKTOP/*", "$DOCUMENT/*", "$HOME/*"]
      },
      "dialog": {
        "all": false,
        "open": true,
        "save": true,
        "message": true,
        "confirm": true
      },
      "clipboard": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.scypher.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "SCypher v3.0 - XOR-based BIP39 Seed Cipher",
        "width": 1000,
        "center": true,
        "minHeight": 600,
        "minWidth": 800,
        "decorations": true,
        "transparent": false
      }
    ]
  }
}
